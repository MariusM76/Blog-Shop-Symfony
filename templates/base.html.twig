<!DOCTYPE html>
<html lang="en">
    <head>
        {%  include ("headers.html.twig") %}
        <title>{% block title %}Welcome to BOOK STORE!{% endblock %}</title>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            <script>
                $('#adminText').animate({
                        height: '80px',
                        width: '220px'
                    },
                    5000, 'swing');

                $('#adminOptions').animate({
                        height: '80px',
                        width: '900px',
                    },
                    1200, 'swing');
            </script>
        {% endblock %}
    </head>
    <body class="bg-warning bg-opacity-10 " >
    {% include ("generalTop.html.twig") %}
    {% include ("mainMenu.html.twig") %}

    {% block body %}{% endblock %}

    {%  include ("footer.html.twig") %}
    </body>
</html>
