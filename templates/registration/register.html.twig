{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="container justify-content-center">
    <div class="row justify-content-center">
        <div class="col-6">

            <h1 class="my-3">Register</h1>

            {{ form_start(registrationForm) }}
            <div class="my-2 ">{{ form_row(registrationForm.email) }}</div>
            <div class="my-2 ">{{ form_row(registrationForm.plainPassword, {
                    label: 'Password: '
                }) }}</div>
            <div class="my-2 ">{{ form_row(registrationForm.agreeTerms) }}</div>

                <button type="submit" class="btn btn-outline-warning text-dark mt-4">Register</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
