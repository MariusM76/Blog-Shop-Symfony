{% extends 'base.html.twig' %}

{% block title %}ADMIN PANEL!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-4 text-dark">

                {% if allcategories is defined %}
                <div class="btn-group">
                    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Choose category
                    </button>
                    <ul class="dropdown-menu">
                        {% for category in allcategories %}
                            <li id="category" name="category" value="{{ category.getId() }}" class="nav-item px-2 border-end">
                                <a class="nav-link fw-semibold" href="{{ url('editproduct2',{'categoryId':category.id}) }}">{{ category.name }} ({{ category.getNoProducts() }})</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

                {% if allproducts is defined %}
                <div class="btn-group">
                    <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Choose product
                    </button>
                    <ul class="dropdown-menu">
                        {% for product in allproducts %}
                            <li id="product" name="product" value="{{ product.getId() }}" class="nav-item px-2 border-end">
                                <a class="nav-link fw-semibold" href="{{ url('app_product_edit',{'id':product.id}) }}">{{ product.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}