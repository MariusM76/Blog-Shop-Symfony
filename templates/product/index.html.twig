{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
    <h1 class="text-decoration-underline">Product Panel</h1>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.category }}</td>
                <td>
                <img src="{{ asset('images/'~product.image) }}" style="height: 80px"/>
                </td>
                <td>
                    <a class="btn btn-outline-info text-dark mx-2" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a class="btn btn-outline-warning text-dark mx-2" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                    <a class="btn btn-outline-danger text-dark mx-2" href="{{ path('app_product_delete', {'id': product.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
