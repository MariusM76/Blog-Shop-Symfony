<form method="post" action="{{ path('app_topic_delete', {'id': topic.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ topic.id) }}">
    <div class="row">
        <div class="col">
            <button class="btn btn btn-outline-danger col-2 fw-bolder text-dark mx-2 my-3">Delete</button>
        </div>
    </div>
</form>
