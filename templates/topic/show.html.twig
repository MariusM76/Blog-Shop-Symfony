{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ topic.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ topic.name }}</td>
            </tr>
        </tbody>
    </table>
        <div class="row">
            <div class="col">
                <a class="btn btn-outline-info text-dark my-3 col-2" href="{{ path('app_topic_index') }}">back to list</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a class="btn btn-outline-warning text-dark my-3 col-2" href="{{ path('app_topic_edit', {'id': topic.id}) }}">edit</a>
            </div>
        </div>

    {{ include('topic/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
