{% extends 'base.html.twig' %}

{% block title %}ADMIN PANEL!{% endblock %}

{% block body %}

    <div class="container mt-5" id="admin">
        <div class="row d-flex justify-content-center">
            <div class="col-8">
                <div class="card text-center bg-info" id="adminOptions">
                    <div class="card-header">
                        <div class="border border-top-0 border-start-0 border-end-0 border-dark mt-3" id="adminText"><h3>ADMIN PANEL</h3></div>
                        <ul class="nav nav-tabs card-header-tabs justify-content-around mt-5">
                            <li class="nav-item list-group-flush">
                                <div class="dropdown-center">
                                    <button class="btn btn-light dropdown-toggle mb-4" data-bs-auto-close="outside" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage Shop
                                    </button>
                                    <ul class="dropdown-menu list-group-flush justify-content-evenly">
                                        <li class="list-group-item list-group-item-action list-group-item-info ">
                                            <div class="btn-group dropend  dropdown-item">
                                                <span class="btn btn-outline-warning dropdown-toggle text-dark" data-bs-toggle="dropdown" aria-expanded="true">
                                                    Products
                                                </span>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="{{ url('app_product_new') }}">Add product</a></li>
                                                    <li><a class="dropdown-item" href="{{ url('app_product_index') }}">Product Panel</a></li>
                                                </ul>
                                            </div>
                                        </li>
                                        <li class="list-group-item list-group-item-action list-group-item-info ">
                                            <div class="btn-group dropend  dropdown-item">
                                                <span class="btn btn-outline-warning dropdown-toggle text-dark" data-bs-toggle="dropdown" aria-expanded="true">
                                                    Categories
                                                </span>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="{{ url('app_category_new') }}">Add category</a></li>
                                                    <li><a class="dropdown-item" href="{{ url('app_category_index') }}">Category Panel</a></li>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </li>

                            <li class="nav-item list-group-flush">
                                <div class="dropdown-center">
                                    <button class="btn btn-light dropdown-toggle mb-4" data-bs-auto-close="outside" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Manage Blog
                                    </button>
                                    <ul class="dropdown-menu list-group-flush justify-content-evenly">
                                        <li class="list-group-item list-group-item-action list-group-item-info ">
                                            <div class="btn-group dropend  dropdown-item">
