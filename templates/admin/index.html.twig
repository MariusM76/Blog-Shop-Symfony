    <script>
        $('#adminText').animate({
                height: '80px',
                width: '220px'
            },
            5000, 'swing');

        $('#adminOptions').animate({
                height: '80px',
                width: '900px',
            },
            1200, 'swing');
        // $('#adminOptions').fadeIn(5000, function () {
