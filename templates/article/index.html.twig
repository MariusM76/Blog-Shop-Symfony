{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Topic</th>
                <th>Author</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.body }}</td>
                <td>{{ article.topic }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <img src="{{ asset('images/'~article.image) }}" style="height: 80px"/>
                </td>
                <td>
                    <a class="btn btn-outline-info text-dark mx-2" href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a class="btn btn-outline-warning text-dark mx-2" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                    <a class="btn btn-outline-danger text-dark mx-2" href="{{ path('app_article_delete', {'id': article.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>

{% endblock %}
