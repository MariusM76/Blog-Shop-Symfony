{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
    <h1>Category index</h1>

    <table class="table mt-3 justify-content-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>No of products</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.getNoProducts }}</td>
                <td>
                    <a class="btn btn-outline-info text-dark mx-2" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-outline-warning text-dark mx-2" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                    <a class="btn btn-outline-danger text-dark mx-2" href="{{ path('app_category_delete', {'id': category.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>

{% endblock %}
